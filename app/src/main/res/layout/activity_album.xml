<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColorMain">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/album_img_margin_top"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/cornerRadius"
        android:layout_width="@dimen/album_dimens"
        android:layout_height="@dimen/album_dimens">

        <ImageView
            android:id="@+id/ivAlbumImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ivAlbumItemName"
        android:text="@string/album_placeholder_name"
        android:layout_margin="@dimen/circular_image_maring"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_size"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ivAlbumItemArtist"
        android:textSize="@dimen/small_header_size"
        android:textColor="@color/white"
        android:text="@string/item_album_placeholder_artist"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <ProgressBar-->
<!--        android:id="@+id/progress_albumtracks"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="50dp"/>-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_Tracks"
        android:layout_marginTop="@dimen/circular_image_maring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>







</LinearLayout>